<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEvents">
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        tools:ignore="InvalidId,MissingConstraints" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDDDDD"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/testImage"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:maxWidth="@dimen/activity_horizontal_margin"
                android:maxHeight="@dimen/activity_horizontal_margin"
                android:layout_height="500dp"
                android:background="@drawable/ic_insert_photo_black_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0.5"
                />
            <Button
                android:id="@+id/AddButEvent"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="64dp"
                android:text="Select Poster"
                android:textColor="#FFFFFF"
                android:textSize="28dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintVertical_bias="0.9"/>

            <EditText
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:id="@+id/EventName"
                android:background="@drawable/edit_text"
                android:hint="Event Name"
                android:textColorHint="#555555"
                android:paddingHorizontal="24dp"
                android:layout_marginHorizontal="10dp"
                />

            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/EventDesc"
                android:paddingVertical="10dp"
                android:background="@drawable/edit_text"
                android:hint="Event Description"
                android:textColorHint="#555555"
                android:paddingHorizontal="24dp"
                android:layout_marginHorizontal="10dp"
                android:inputType="textMultiLine"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:id="@+id/GoogleForms"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text"
                android:hint="Google Forms"
                android:textColorHint="#555555"
                android:paddingHorizontal="24dp"
                android:layout_marginHorizontal="10dp"
                />

            <Button
                android:id="@+id/SubmitEvent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/button"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="#FFFFFF"
                android:textSize="28dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>